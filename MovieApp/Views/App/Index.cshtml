@model IEnumerable<MovieViewModel>
@{
    ViewBag.Title = "IMDb";
}
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Genero
            </th>
            <th>
                <a asp-controller="App" asp-action="AddOrEdit" class="btn btn-primary">Agregar Pelicula</a>
            </th>
        </tr>
    </thead>
    @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Genre
                    </td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('¿Está seguro de borrar esta película?')">Eliminar</a>
                    </td>
                </tr>
            }
</table>


